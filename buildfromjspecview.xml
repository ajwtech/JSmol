<project name="JSmol" default="fromJSV" basedir=".">
	
	<property name="jsv.path" value="../JSpecView" />

	<!-- 

	JSpecView and JspecViewLib classes are added, all to src/jspecview
	
            - Bob Hanson October 10, 2013.
	 -->

  <target name="fromJSV" id="fromJSV">
  	
  	<echo>deleting all files in src/jspecview|javajs and bin/jspecview|javajs</echo>
    <delete quiet="true">
      <fileset dir="bin/jspecview" includes="**/*"/>
      <fileset dir="src/jspecview" includes="**/*"/>
      <fileset dir="bin/javajs" includes="**/*"/>
      <fileset dir="src/javajs" includes="**/*"/>
    </delete>
  	
 	<echo>copying files from ${jsv.path}Lib</echo>
    <copy overwrite="true" todir="src/jspecview" >
      <fileset dir="${jsv.path}Lib/src/jspecview">
        <include name="**/*" />
      </fileset>
    </copy>
    <copy overwrite="true" todir="src/javajs" >
      <fileset dir="${jsv.path}Lib/src/javajs">
        <include name="**/*" />
      </fileset>
    </copy>

  	<echo>copying files from ${jsv.path}</echo>
  	<copy overwrite="true" todir="src/jspecview" >
      <fileset dir="${jsv.path}/src/jspecview">
        <include name="**/*.java" />
        <exclude name="**/applet/*"/>
        <exclude name="**/application/*"/>
        <exclude name="**/awt/*"/>
        <exclude name="**/g2d/*"/>
        <exclude name="**/java/*"/>
      	<exclude name="**/unused/*"/>
      </fileset>
    </copy>
   	<echo>Now run buildtojstest.xml or buildtojs.xml to compile JSmol with JSpecView</echo>

  </target>
	
</project>
