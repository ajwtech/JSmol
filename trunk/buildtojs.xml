<project name="JSmol" default="toJs" basedir=".">
 
  <target name="toJs" id="toJs">
    <copy todir="js" >
      <fileset dir="bin">
        <include name="**/*.js" />
      </fileset>
    </copy>
  	<delete dir="jslocal/java/**/*.js" />
  	<delete dir="jslocal/org/**/*.js" />
    <copy todir="jslocal" >
      <fileset dir="bin">
        <include name="**/*.js" />
        <exclude name="**/jsmol/*.js" />
      </fileset>
    </copy>
    <copy todir="jslocal/org/jmol" >
  	  <fileset dir="">
  	    <include name="Jmol.properties" />
  	  </fileset>
    </copy>
    <copy todir="jslocal/org/jmol/minimize/forcefield/data" >
      <fileset dir="src/org/jmol/minimize/forcefield/data">
        <include name="*.txt" />
      </fileset>
    </copy>
  </target>
  	
</project>
