<project name="JSmol" default="fromJmol" basedir=".">
 
  <target name="fromJmol" id="fromJmol">
    <copy todir="src/org/jmol" >
      <fileset dir="../Jmol/src/org/jmol">
        <include name="**/*.java" />
        <exclude name="**/applet/*"/>
        <exclude name="**/awt/*"/>
        <exclude name="**/console/*"/>
      	<exclude name="**/export/**/*"/>
      	<exclude name="**/g3d/*"/>
      	<exclude name="**/i18n/*"/>
      	<exclude name="**/modelkit/*"/>
        <exclude name="**/multitouch/**/*"/>
        <exclude name="**/quantum/*"/>
        <exclude name="**/popup/*"/>
      </fileset>
    </copy>
    <copy todir="src/org/jmol/minimize/forcefield/mmff" >
      <fileset dir="../Jmol/src/org/jmol/minimize/forcefield/mmff">
        <include name="*.txt" />
      </fileset>
    </copy>
  	<copy todir="src/javax/util" >
      <fileset dir="../Jmol/src/javax/util">
        <include name="StringXBuilder.java" />
      </fileset>
    </copy>
  	<copy todir="src/javax/vecmath" >
      <fileset dir="../Jmol/src/javax/vecmath">
        <include name="**/*.java" />
      </fileset>
    </copy>

  </target>
	
</project>
