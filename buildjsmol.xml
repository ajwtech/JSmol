<project name="JSmol" default="main" basedir=".">
 
  <target name="main" id="main">
    <copy todir="src/org/jmol" >
      <fileset dir="../Jmol/src/org/jmol">
        <include name="**/*.java" />
        <exclude name="**/applet/*"/>
        <exclude name="**/awt/*"/>
        <exclude name="**/console/*"/>
      	<exclude name="**/export/**/*"/>
      	<exclude name="**/g3d/*"/>
      	<exclude name="**/i18n/*"/>
      	<exclude name="**/minimize/**/*"/>
      	<exclude name="**/modelkit/*"/>
        <exclude name="**/multitouch/**/*"/>
        <exclude name="**/quantum/*"/>
        <exclude name="**/popup/*"/>
      	<exclude name="**/render/*"/>
      	<exclude name="**/renderbio/*"/>
	  	<exclude name="**/renderspecial/*"/>
  		<exclude name="**/rendersurface/*"/>
      </fileset>
    </copy>
  	<delete dir="js/java/**/*.js" />
  	<delete dir="js/javax/**/*.js" />
  	<delete dir="js/org/**/*.js" />
    <copy todir="js" >
      <fileset dir="bin">
        <include name="**/*.js" />
      </fileset>
    </copy>
  </target>
  	
</project>
